<Window x:Class="TikTakToke.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="Tik Tak Toke - Main Menu" Height="900" Width="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <Grid Background="Silver">
            <StackPanel Height="500" Width="250" VerticalAlignment="Center">
                <Button Style="{StaticResource ButtonPrimary}" Content="Zaloguj się" 
                        Width="200" Height="50" Margin="0,50,0,0" 
                        hc:BorderElement.CornerRadius="25" Click="b_log_in" />
                
                <Button Style="{StaticResource ButtonPrimary}" Content="Rejestracja" 
                        Width="200" Height="50" Margin="0,20,0,0" 
                        hc:BorderElement.CornerRadius="25" Click="b_sign_in"/>
                
            </StackPanel>
        

    </Grid>
</Window>
